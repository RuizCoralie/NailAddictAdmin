<UserControl x:Class="NailAddictAdmin.UserControls.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <UserControl.Resources>
        <Style x:Key="TextBlockStyleTitre" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe Light UI"/>
            <Setter Property="FontSize" Value="27"/>
            <Setter Property="Foreground" Value="#BF1E4B"/>
            <Setter Property="Margin" Value="0,30,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="/Resources/nail.png"  Grid.Row="0"></Image>
        <TextBlock Grid.Row="1" Text="Page admin Nail Addict" Style="{StaticResource TextBlockStyleTitre}"/>       
    </Grid>
</UserControl>
